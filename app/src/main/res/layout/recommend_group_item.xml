<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="20dp"
    android:orientation="horizontal">
    <RelativeLayout
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:background="@color/recommend_grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/group_image"
            android:src="@drawable/test6"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/manping_user_avatar_size"
            android:layout_height="@dimen/manping_user_avatar_size" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/group_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/group_title"
                android:textColor="@color/text_normal"
                android:textSize="16sp"
                android:text="进击的巨人团"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/main_index_color_select"
                android:textSize="12sp"
                android:text="打不死的五小强"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_gravity="right"
        android:background="@color/theme_color"
        android:gravity="center"
        android:layout_width="90dp"
        android:layout_height="match_parent">

        <TextView
            android:background="@drawable/icon_add"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:text="关注"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</FrameLayout>