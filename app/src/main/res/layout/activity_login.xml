<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/logo_icon"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/icon_logo"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <ImageView
            android:layout_marginLeft="20dp"
            android:src="@drawable/icon_logo_text"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_qq"
        android:layout_marginTop="50dp"
        android:background="@drawable/search_inputbox"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/logo_icon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/login_qq"
            android:scaleType="fitXY"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_gravity="center"
            android:text="QQ登陆"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/login_qq"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/login_weibo"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/search_inputbox"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="45dp">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/login_weibo"
            android:scaleType="fitXY"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_gravity="center"
            android:text="微博登陆"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/login_weibo"
        android:layout_centerHorizontal="true"
        android:id="@+id/login_oneself"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/search_inputbox"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:textColor="@color/lightgrey"
            android:text="已有账号？番米登陆"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/login_oneself"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/register_user"
            android:layout_gravity="center"
            android:textColor="@color/lightgrey"
            android:text="注册账号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/login_skip"
            android:layout_marginLeft="30dp"
            android:textColor="@color/lightgrey"
            android:text="随便逛逛"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>