<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="1dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/topic_image"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/test5"
                android:layout_width="match_parent"
                android:layout_height="240dp" />
            <LinearLayout
                android:orientation="vertical"
                android:background="#601a181a"
                android:layout_gravity="bottom"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="海贼王"
                    style="@style/sub_title"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:id="@+id/anime_average_star_container"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/icon_star_yellow"
                        android:layout_width="@dimen/anime_average_star_middle"
                        android:layout_height="@dimen/anime_average_star_middle" />
                    <ImageView
                        android:src="@drawable/icon_star_grey"
                        android:layout_width="@dimen/anime_average_star_middle"
                        android:layout_height="@dimen/anime_average_star_middle" />
                    <ImageView
                        android:src="@drawable/icon_star_grey"
                        android:layout_width="@dimen/anime_average_star_middle"
                        android:layout_height="@dimen/anime_average_star_middle" />
                    <ImageView
                        android:src="@drawable/icon_star_grey"
                        android:layout_width="@dimen/anime_average_star_middle"
                        android:layout_height="@dimen/anime_average_star_middle" />
                    <ImageView
                        android:src="@drawable/icon_star_grey"
                        android:layout_width="@dimen/anime_average_star_middle"
                        android:layout_height="@dimen/anime_average_star_middle" />
                    <TextView
                        android:id="@+id/anime_score"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:text="2.0分"
                        style="@style/third_title"
                        android:textColor="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <TextView
            android:text="高中  我希望他明白：男人承诺了，就要努力去实现！实现不了的承诺，就是背负的罪孽。"
            android:padding="10dp"
            style="@style/third_title"
            android:textColor="@color/nav_default_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.v7.widget.CardView>