<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/mantie_image"
        android:scaleType="centerCrop"
        android:background="@drawable/image_border"
        android:src="@drawable/mantie_item_image"
        android:layout_width="@dimen/little_image_heigth"
        android:layout_height="@dimen/little_image_width" />
    <TextView
        android:id="@+id/mantie_title"
        android:textSize="12sp"
        android:text="如最后的那段解说词一样，华生死了，而星期五重新获得了灵魂，华生变"
        android:textColor="@color/summary_content"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:lineSpacingExtra="5dp"
        android:layout_width="@dimen/little_image_heigth"
        android:layout_height="wrap_content" />
</LinearLayout>