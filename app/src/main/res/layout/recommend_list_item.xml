<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="1dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--<LinearLayout-->
                <!--android:id="@+id/article_image_container"-->
                <!--android:orientation="horizontal"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="180dp">-->
            <!--</LinearLayout>-->
            <ImageView
                android:id="@+id/article_image"
                android:padding="1dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
            <TextView
                android:id="@+id/article_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22天前"
                android:padding="5dp"
                android:textColor="@color/white"
                android:layout_gravity="top|left"/>

            <TextView
                android:id="@+id/article_browse_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="897人看过"
                android:padding="5dp"
                android:textColor="@color/white"
                android:layout_gravity="right|top" />
        </FrameLayout>
        <TextView
            android:id="@+id/article_title"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            style="@style/translation_title"
            android:text="黑化主角动漫大盘点！"
            android:maxLines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/article_summary"
            android:text="自从fate带入了这个专有名词之后，大多动漫开始走起了黑化路线，崩溃变坏"
            style="@style/third_title"
            android:maxLines="3"
            android:ellipsize="end"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/nav_default_color"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</android.support.v7.widget.CardView>
