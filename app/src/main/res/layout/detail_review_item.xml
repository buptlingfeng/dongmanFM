<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/whitesmoke"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.dongman.fm.ui.view.CircleImageView
        android:id="@+id/comment_avatar"
        android:src="@color/greenyellow"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:border_width="1dp"
        app:border_color="@color/white"
        android:layout_width="70dp"
        android:layout_height="70dp" />
    <TextView
        android:id="@+id/comment_nick"
        android:text="刘智伟"
        android:textSize="20sp"
        android:textColor="#259b24"
        android:layout_toRightOf="@id/comment_avatar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/comment_date"
        android:text="2015-07-23"
        android:textColor="#e8e6e8"
        android:layout_alignBaseline="@id/comment_nick"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/comment_content"
        android:layout_below="@id/comment_nick"
        android:layout_alignLeft="@id/comment_nick"
        android:layout_marginTop="10dp"
        android:maxLines="3"
        android:textColor="#101010"
        android:text="数不清的美少女、性格各异的美少女、梦想的后宫、超多的杀必死？哦，不，我们只是想纯..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/comment_reply"
        android:text="回复"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />
    <TextView
        android:id="@+id/review_favour"
        android:layout_toLeftOf="@id/comment_reply"
        android:layout_marginRight="30dp"
        android:layout_alignParentBottom="true"
        android:text="点赞"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>